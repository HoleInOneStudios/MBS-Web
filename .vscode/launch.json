    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "Edge Launch",
            "request": "launch",
            "type": "pwa-msedge",
            "file": "${workspaceFolder}/index.html",
            "webRoot": "${workspaceFolder}",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Chrome Launch",
            "request": "launch",
            "type": "pwa-chrome",
            "file": "${workspaceFolder}/index.html",
            "webRoot": "${workspaceFolder}",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Firefox Launch",
            "type": "firefox",
            "request": "launch",
            "file": "${workspaceFolder}/index.html",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}